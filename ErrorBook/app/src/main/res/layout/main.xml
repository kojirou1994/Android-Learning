        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="错题查询"
            android:textColor="@android:color/white"
            android:textSize="24sp" />
    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/three_row"
