        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:src="@drawable/bookmark" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="@android:color/white"
